<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <AssemblyName>BindOpen.Pulp.Commands.Abstractions</AssemblyName>
    <PackageId>BindOpen.Pulp.Commands.Abstractions</PackageId>
    <Product>BindOpen.Pulp.Commands</Product>
    <Company>BindOpen</Company>
    <Copyright>Copyright ©BindOpen 2011-2023</Copyright>
    <Description>This package provides the core abstractions of BindOpen.Pulp.Commands.</Description>
    <Authors>Sumer Team</Authors>
    <RootNamespace>BindOpen.Pulp.Commands.Abstractions</RootNamespace>
    <PackageProjectUrl>https://github.com/bindopen/BindOpen.Pulp.Commands</PackageProjectUrl>
    <RepositoryUrl>https://github.com/bindopen/BindOpen.Pulp.Commands.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageIcon>bindopen_icon.png</PackageIcon>
    <PackageIconUrl>https://storage.bindopen.org/org/icons/bindopen_icon_64x64.png</PackageIconUrl>
    <SignAssembly>true</SignAssembly>
    <PackageReadmeFile>Readme.md</PackageReadmeFile>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DocumentationFile>BindOpen.Pulp.Commands.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\docs\images\bindopen_icon.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
    <None Include="..\..\LICENSE">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
    <None Include="..\..\Readme.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="BindOpen.System.Abstractions" Version="1.2.92" />
  </ItemGroup>

</Project>
