<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <AssemblyName>BindOpen.Commands</AssemblyName>
    <PackageId>BindOpen.Commands</PackageId>
    <Product>BindOpen.Commands</Product>
    <Company>BindOpen</Company>
    <Copyright>Copyright ©BindOpen 2011-2024</Copyright>
    <Description>A straightforward and comprehensive API for manipulating command-line arguments and handling related tasks.</Description>
    <Authors>Sumer Team</Authors>
    <RootNamespace>BindOpen.Commands</RootNamespace>
    <PackageProjectUrl>https://github.com/bindopen/BindOpen.Commands</PackageProjectUrl>
    <RepositoryUrl>https://github.com/bindopen/BindOpen.Commands.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageIcon>bindopen_icon.png</PackageIcon>
    <PackageIconUrl>https://storage.bindopen.org/img/icons/bindopen_icon_64x64.png</PackageIconUrl>
    <SignAssembly>true</SignAssembly>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DocumentationFile>BindOpen.Commands.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\docs\images\bindopen_icon.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
    <None Include="..\..\LICENSE">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
    <None Include="..\..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="BindOpen.Data" Version="1.2.166" />
    <PackageReference Include="BindOpen.Scoping" Version="1.2.166" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Abstrations\Abstrations.csproj" />
  </ItemGroup>

</Project>
